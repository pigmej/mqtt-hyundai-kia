# Hyundai API Configuration
# Your Hyundai/Kia/Genesis account credentials
HYUNDAI_USERNAME=your_email@example.com
HYUNDAI_PASSWORD=your_password
HYUNDAI_PIN=your_pin

# Region Configuration
# 1=Europe, 2=Canada, 3=USA, 4=China, 5=Australia, 6=India, 7=New Zealand, 8=Brazil
HYUNDAI_REGION=1

# Brand Configuration
# 1=Kia, 2=Hyundai, 3=Genesis
HYUNDAI_BRAND=2

# Optional: Specific vehicle ID (leave empty to auto-detect)
HYUNDAI_VEHICLE_ID=

# MQTT Broker Configuration
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883

# MQTT Authentication (optional)
MQTT_USERNAME=
MQTT_PASSWORD=

# MQTT TLS/SSL (optional)
MQTT_USE_TLS=false

# MQTT Client Configuration
MQTT_CLIENT_ID=hyundai_mqtt
MQTT_QOS=1
MQTT_BASE_TOPIC=hyundai

# Application Configuration
LOG_LEVEL=INFO
INITIAL_REFRESH=true
